# Let's play something fun

live_loop :flibble do
  sample :bd_haus, rate: 1
  sample :drum_heavy_kick
  sleep 0.5
end

live_loop :cmajor do
  use_synth :saw
  
  # Let's play the following chords
  # C-G-Am-F
  # Chord C-major, Progression 1, CEG
  play :c3
  play :e3
  play :g3
  sleep 0.5
  # chord G-major, Progression 1, GBD
  play :g3
  play :b3
  play :d3
  sleep 0.5
  # Chord A-minor, Progression 1, ACE
  play :a3
  play :c3
  play :e3
  sleep 0.5
  # Chord F-major, Progression 1, FAC
  play :f3
  play :a3
  play :c3
  sleep 0.5
end

live_loop :cmajor do
  use_synth :saw

  # Let's play the following chords
  # C-G-Am-F
  # Chord C-major, Progression 1, CEG
  play :c3
  play :e3
  play :g3
  sleep 0.25
  # Chord A-minor, Progression 1, ACE
  play :a3
  play :c3
  play :e3
  sleep 0.25
  # chord G-major, Progression 1, GBD
  play :g3
  play :b3
  play :d3
  sleep 0.25
  # Chord A-minor, Progression 1, ACE
  play :a3
  play :c3
  play :e3
  sleep 0.25
end
